@model App.MVC.ViewModels.Topic.SendPostViewModel

@using (Html.BeginForm("SendPost", "Topic"))
{
    <div class="row">
        <div class="col-md-12">
            @Html.TextAreaFor(p => p.Content, new { @class = "form-control" })
        </div>
    </div>
    <div class="row row-margin">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary float-right" value="Send reply"/>
        </div>
    </div>
}