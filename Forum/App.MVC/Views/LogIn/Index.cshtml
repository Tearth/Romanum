@model App.MVC.ViewModels.LogIn.LogInViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    @using (Html.BeginForm("Index", "LogIn"))
    {
        <div class="card bg-light">
            <div class="card-header">Log in</div>
            <div class="card-body">
                <div class="form-group">
                    @Html.TextBoxFor(p => p.UserName, new { @class = "form-control", placeholder = "Enter email" })
                    @Html.ValidationMessageFor(p => p.UserName, null, new { @class = "validation-error-text" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Enter password" })
                    @Html.ValidationMessageFor(p => p.Password, null, new { @class = "validation-error-text" })
                </div>
                <div class="form-check">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.CheckBoxFor(p => p.RememberMe, new { @class = "form-check-input" })
                            <label class="form-check-label">Remember me</label>
                        </div>
                        <div class="col-md-6 forgot-password-text">
                            Forgot your password?
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary send-button">Log in</button>
            </div>
        </div>
    }
    </div>
    <div class="col-md-4"></div>
</div>