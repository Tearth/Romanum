@model App.MVC.ViewModels.ControlPanel.ProfileOverviewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table width="100%" cellspacing="0" cellpadding="0" border="0">
    <tr>
        <td width="20%" valign="top" id="ucp-left">
            <div class="cap-div">
                <div class="cap-left">
                    <div class="cap-right">&nbsp;Options&nbsp;</div>
                </div>
            </div>
            <table class="tablebg" width="100%" cellspacing="0">
                <tr>
                    <td class="row1">
                        <b class="nav">Overview</b>
                    </td>
                </tr>
            </table>
        </td>

        <td><img src="images/spacer.gif" width="4" alt="" /></td>

        <td width="80%" valign="top">
            <form name="ucp" id="ucp" method="post" action="./ucp.php?style=36&amp;i=main&amp;mode=front">
                <div class="cap-div"><div class="cap-left"><div class="cap-right">&nbsp;User Control Panel&nbsp;</div></div></div>
                <table class="tablebg" width="100%" cellspacing="0">
                    <tr>
                        <th colspan="3">Your activity</th>
                    </tr>
                    <tr>
                        <td class="row1" colspan="3">
                            <table width="100%" cellspacing="1" cellpadding="4">
                                <tr>
                                    <td align="right" valign="top" nowrap="nowrap"><b class="genmed">Joined: </b></td>
                                    <td width="100%"><b class="gen">@Model.JoinTime</b></td>
                                </tr>
                                <tr>
                                    <td align="right" valign="top" nowrap="nowrap"><b class="genmed">Total posts: </b></td>
                                    <td>
                                        <b class="gen">@Model.PostsCount</b><br />
                                            <span class="genmed">
                                                [@(Model.PercentageOfAllPosts * 100)% of all posts / @Model.PostsPerDay posts per day]
                                                <br />
                                                <a href="#">Show your posts</a>
                                            </span>
                                    </td>
                                </tr>

                                <tr>
                                    <td align="right" valign="top" nowrap="nowrap"><b class="genmed">Most active forum: </b></td>
                                    <td><span class="gen">@Model.MostActiveCategory.CategoryName</span></td>
                                </tr>
                                <tr>
                                    <td align="right" valign="top" nowrap="nowrap"><b class="genmed">Most active topic: </b></td>
                                    <td><span class="gen">@Model.MostActiveTopic.TopicName</span></td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td class="cat" colspan="3">&nbsp;</td>
                    </tr>
                </table>
            </form>
        </td>
    </tr>
</table>