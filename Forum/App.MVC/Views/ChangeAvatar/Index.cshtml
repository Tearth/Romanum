@model App.MVC.ViewModels.ControlPanel.ChangeAvatarViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomScripts
{
    @Scripts.Render("/Scripts/Views/change-avatar.js");
}

<table width="100%" cellspacing="0" cellpadding="0" border="0">
    <tr>
        <td width="20%" valign="top" id="ucp-left">
            <div class="cap-div">
                <div class="cap-left">
                    <div class="cap-right">&nbsp;Options&nbsp;</div>
                </div>
            </div>
            <table class="tablebg" width="100%" cellspacing="0">
                <tr>
                    <td class="row1">
                        <b class="nav">Overview</b>
                    </td>
                </tr>
            </table>
        </td>

        <td><img src="images/spacer.gif" width="4" alt="" /></td>

        <td width="80%" valign="top">
            <div class="cap-div"><div class="cap-left"><div class="cap-right">&nbsp;User Control Panel&nbsp;</div></div></div>
            <table class="tablebg" width="100%" cellspacing="0">
                <tr>
                    <th colspan="3">Your activity</th>
                </tr>
                <tr>
                    @using (Html.BeginForm("Index", "ChangeAvatar"))
                    {
                        <table class="tablebg" width="100%" cellspacing="0">
                            <tr>
                                @Html.ValidationMessage("Summary")
                                <td class="row2">

                                    <table align="center" cellspacing="1" cellpadding="4" style="width: 100%;">
                                        <tr>
                                            <td valign="top"><b class="gensmall">Avatar:</b></td>
                                            <td>
                                                <div class="default-avatar-section">
                                                    <div class="default-avatar-radio">Default @Html.RadioButtonFor(p => Model.Type, global::App.MVC.ViewModels.ControlPanel.Enums.AvatarType.Default)</div>
                                                </div>
                                                <div class="gravatar-avatar-section">
                                                    <div class="gravatar-avatar-radio">Gravatar @Html.RadioButtonFor(p => Model.Type, global::App.MVC.ViewModels.ControlPanel.Enums.AvatarType.Gravatar)</div>
                                                </div>
                                                <div class="internal-avatar-section">
                                                    <div class="internal-avatar-radio">Internal @Html.RadioButtonFor(p => Model.Type, global::App.MVC.ViewModels.ControlPanel.Enums.AvatarType.Internal)</div>
                                                    <div class="internal-avatar-input"><input type="file" name="file" /></div>
                                                </div>
                                                <br />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <tr>
                                <td class="cat" colspan="2" align="center">
                                    <input type="submit" name="login" class="btnmain" value="Change" tabindex="5" />
                                </td>
                            </tr>
                        </table>
                    }
                </tr>
                <tr>
                    <td class="cat" colspan="3">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>