@model App.MVC.ViewModels.Registration.RegistrationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomScripts
{
    @Scripts.Render("~/bundles/validation")
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Registration"))
        {
            <div class="card bg-light">
                <div class="card-header">Log in</div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.UserName, new { @class = "form-control", placeholder = "Enter username" })
                        @Html.ValidationMessageFor(p => p.UserName, null, new { @class = "validation-error-text" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.EMail, new { @class = "form-control", placeholder = "Enter e-mail" })
                        @Html.ValidationMessageFor(p => p.EMail, null, new { @class = "validation-error-text" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.ConfirmEMail, new { @class = "form-control", placeholder = "Confirm e-mail" })
                        @Html.ValidationMessageFor(p => p.ConfirmEMail, null, new { @class = "validation-error-text" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(p => p.Password, null, new { @class = "validation-error-text" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                        @Html.ValidationMessageFor(p => p.ConfirmPassword, null, new { @class = "validation-error-text" })
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="@ViewData["CaptchaPublicKey"]"></div>
                    </div>
                    <button type="submit" class="btn btn-primary send-button">Register</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4"></div>
</div>